<html>
    <head>
        <title>Citizens Bank Of India</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
       
        <link rel="stylesheet"
        type="text/css"
        href="../stylesheets/bootstrap.min.css" />

        <link rel="stylesheet"
        type="text/css"
        href="../stylesheets/style.css" />

        <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
      <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

    </head>

   <body class="bg">
      
           
    <nav class="navbar navbar-default navbar-transparent">
        <div class="container-fluid">
           <div class="navbar-header">
            <button type="button"
            class="navbar-toggle collapsed"
            data-toggle="collapse" data-target="#main_navbar"
            aria-expanded="false" aria-co
           >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
                 </button>
           </div>
           
           <div class="collapse navbar-collapse"
           id="main_navbar">   
           <ul class="nav navbar-nav">
           <li ><a href="/" class=" nav-link">Home</a></li>
           <li ><a href="/transactionHistory" class="nav-link">Customer Status</a></li>
          
          
           </ul>
           </div>		
        </div>		
        </nav>


        <div class="jumbotron">
            <h2>Make Transaction</h2>


        </div>

        
        
        <div class="row">
            <div class="col-md-11 col-sm-11" style="margin-left: 30px; margin-right: auto;">
             
                <form action="/transactionHistory/<%=user.id%>" method="post">
                    <div class="form-group">
                      <label >From:</label>
                    
                      <input type="text" id="from" value="<%=user.name%>" name="from" readonly>
                      </div>
                    <div class="form-group">
                      <label >Transfer money to:</label>
                      <select id="to" name="to">
                        <% users.forEach((item)=>{%>
                        <option value="<%=item.name%>"><%=item.name%></option>
                       <%});%>
                      </select>
                      
                    </div>
                    <div class="form-group form-check">
                      <label >Amount:</label>
                      <input type="number" id="amount" name="amount" min=0 max=<%=user.balance%> required>
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
               
         </div>
        </div>
</body>
 </html>
